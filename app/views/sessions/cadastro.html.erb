<div class="auth-card">
  <h2>Cadastro</h2>

  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, url: signup_path, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Nome", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Senha", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmar senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <%= f.submit "Cadastrar", class: "btn btn-primary w-100 auth-btn" %>
  <% end %>

  <%= link_to "JÃ¡ tem conta? FaÃ§a login", login_path, class: "auth-link" %>
</div>
