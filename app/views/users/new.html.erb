<div class="auth-card">
  <h2>Cadastro</h2>

  <%= form_with model: @user, url: signup_path, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Senha", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <%= f.submit "Cadastrar", class: "btn btn-success w-100 mb-3" %>
  <% end %>

  <div class="text-center">
    <%= link_to "Voltar ao login", login_path, class: "btn btn-outline-secondary w-100" %>
  </div>
</div>
